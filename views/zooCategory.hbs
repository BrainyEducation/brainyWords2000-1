</a>

<h2 id="subcategoryTitle" style="z-index: -1; position: absolute; text-align: center; width: 100%;">{{subCategory}}</h2>

<br/>
<br/>
<div id="spaceDiv"></div>

<div class="row word-container">
    {{#each words}}
        {{#if this.image}}
            <div class="col-sm-3 rectangle wide">
                <div class="option" tabindex="1" onclick='playAudio("{{this.audio}}");'>
                    <span class="helper"></span>
                    <img class="option-image" src="{{this.image}}">
                </div>
                <p class="label-text">{{this.name}}</p>
            </div>
        {{/if}}
    {{/each}}
</div>


