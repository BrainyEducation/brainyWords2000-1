<a href="/street?store={{store}}">
    <img style="height:30px; float:left; margin-top: 5px; margin-left: 5px;" src="/images/buttons/backButton.png"/>
</a>
<h2 style="z-index: -1; position: absolute; text-align: center; width: 100%;">{{category}}</h2>


<br/>
<br/>

<div class="row">
    {{#each subCategories}}
        {{#if this.imageFile}}
            <div class="col-sm-3 rectangle wide">
                <div class="option wide" id="top-left" onclick="select('{{../store}}/{{../category}}/{{@key}}');">
                    <span class="helper"></span>
                    <img class="option-image" src="{{this.imageFile}}">
                </div>
                <p class="label-text">{{subCatName}}</p>
            </div>
        {{/if}}
    {{/each}}
</div>

